<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Welcome To Kami Auto Insurance!</h5>
                <br />
                <h5 class="m-0">Fill out the form below for your custom car insurance quote!</h5>
</div>
        <div class="card-body">
            @using (Html.BeginForm("Quote", "Home", FormMethod.Post))
            {
            <div id="quoteform" class="row no-gutters align-content-center">
                <div class="col">
                    <label>First Name:</label>
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" />
                </div>
                <div class="col">
                    <label>Last Name:</label>
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" />
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <label>Email Address:</label>
                    <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" />
                </div>
                <div class="col">
                    <label>Date Of Birth:</label>
                    <input name="DateOfBirth" type="date" class="form-control" placeholder="Date Of Birth" />
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <label>Car's Model Year:</label>
                    <input name="CarModelYear" type="number" class="form-control" placeholder="Car: Model Year" />
                </div>
                <div class="col">
                    <label>Car's Make:</label>
                    <input name="CarMake" type="text" class="form-control" placeholder="Car: Make" />
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <label>Car's Model:</label>
                    <input name="CarModel" type="text" class="form-control" placeholder="Car: Model" />
                </div>
                <div class="col">
                    <label>Have you recieved any Speeding Tickets?</label>
                    <input name="SpeedingTickets" type="number" class="form-control" placeholder="Number of Speeding Tickets" />
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <form>
                        <label>Have you ever had a DUI?</label>
                        <br />
                        <input type="radio" name="DUICheck" value="False" checked> No<br>
                        <input type="radio" name="DUICheck" value="True"> Yes<br>
                    </form>
                </div>
                <div class="col">
                    <h6>Would you like Full (Comprehensive) Coverage, or Liability-Only?</h6>
                    <input type="radio" name="CoverageType" value="True" checked> Full Coverage<br>
                    <input type="radio" name="CoverageType" value="False"> Liability-Only<br>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>